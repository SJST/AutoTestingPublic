<script type="text/javascript" src="{% static 'jquery.contextmenu/jquery.contextmenu.r2.js' %}"></script>
<script type="text/javascript">

$(function() {
	
	var re = /管理员$/;
	var role_name = "{{user_info.role_name}}";
	
	if(re.test(role_name)){
		$(".admin-menu").show();
	}else{
		$(".admin-menu").hide();
	}
	
	var prompt_message_total_count = {{user_info.prompt_message|length}};
	var prompt_message_read_count = 0;
	var prompt_message_unread_count = 0;
	
	var prompt_message_obj = {{user_info.prompt_message|safe}};
	
	$.each(prompt_message_obj,function(index,one_prompt,prompt_message_obj){
		//alert(one_prompt.read_status);
		
	    if(one_prompt.del_flag != 1){
	    	if(one_prompt.read_status){
				prompt_message_read_count += 1;
			}else{
				prompt_message_unread_count += 1;
			}
	    }
	    
		/* alert(prompt_message_read_count);
		alert(prompt_message_unread_count); */
	})
	
	$("#unread").text(prompt_message_unread_count);
	
	$("body").Huitab({
		tabBar : ".navbar-wrapper .navbar-levelone",
		tabCon : ".Hui-aside .menu_dropdown .page-container",
		className : "current",
		index : 0,
	});
	
	// 根据用户的角色信息，判断显示menu的权限，无权限，则隐藏
	//$("dl#menu-admin").hide();
	
	// 设置皮肤颜色
	var color_code = $.cookie("Huiskin");
	$("#current_color a").attr("data-val", color_code);
	
	// safe为默认过滤
	var skin_color_obj = {{skin_color|safe}};
	var color_name = skin_color_obj[color_code];
	$("#current_color a").attr("title", color_code);
	$("#current_color a").text(color_name);
	
	$("#Hui-skin li a").click(function(){
		$("#current_color a").text($(this).text());
	})
	
});

/*显示提示信息*/
function show_prompt_message(title,url,w,h){
	layer_show(title,url,w,h);
}

/*个人信息*/
function myselfinfo(login_name) {
	//content : 'welcome.html'
	var url = "{% url 'get-userInfo' %}?login_name=" + login_name;
	layer.open({
		type : 2,
		area : [ '500px', '550px' ],
		fix : false, //不固定
		maxmin : true,
		shade : 0.4,
		title : '个人信息',
		content : url
	});
}

/*产品-添加*/
function product_add(title, url) {
	var index = layer.open({
		type : 2,
		title : title,
		content : url
	});
	layer.full(index);
}
	
</script>
